
  <section id="homepage-carousel" class="carousel slide row" data-ride="carousel" data-interval="5000" data-wrap="true" data-pause="false">
    <div class="carousel-inner">
      <div class="carousel-item car-top active" id="slide-one">
      </div>
      <div class="carousel-item car-top" id="slide-two">
      </div>
      <div class="carousel-item car-top" id="slide-three">
      </div>
      <div class="carousel-item car-top" id="slide-four">
      </div>
      <div class="carousel-item car-top" id="slide-five">
      </div>
      <div class="main-title-div">
        <h1 class="title"><i>NAXFOR Homes</i></h1>
      </div>
    </div>
  </section>

  <section class="tag-line-section">
    <h2><%= t 'home.tagline' %></h2>
  </section>
<div class="widther">
  <section class="row image-over-section">
      <div class="home-about-img-div col-lg-8">
        <div id="hm-abt-img"></div>
      </div>
      <div class="home-about-txt-div col-lg-4">
        <%= link_to about_path do %>
          <p class="home-text" id="blacken"><%= capify(t "home.about_intro") %><%= image_tag "right.png", class:"right-arrow" %></p>
        <% end %>
        <h3 class="fade-header"><i>NAXFOR Homes</i></h3>
      </div>
  </section>

  <% if @projects %>
    <section class="row">
      <section id="projcts-home-car" class="col-lg-12 carousel slide" data-ride="carousel" data-interval="5000" data-wrap="true">
        <div class="carousel-inner project-car-section">
          <% @count=0 %>
          <% @projects.each do |project| %>
            <div class="carousel-item car-project-hm <%= active(@count) %>" style="background-image: url(<%= rails_representation_url(project.resized_images(project.images.first)) if project.images.attached? %>)">
              <div class="project-data">
                <%= link_to project_path(project) do %>
                  <h2 class="name" id="blacken"><%= project.name %> <%= image_tag "right.png", class:"right-arrow" %></h2>
                  <% end %>
                <a class="p-controls" href="#projcts-home-car" role="button" data-slide="next">
                  <%= image_tag "arrow-right.png", class:"arrows" %>
                </a>
                <a class="p-controls" href="#projcts-home-car" role="button" data-slide="prev">
                  <%= image_tag "arrow-left.png", class:"arrows" %>
                </a>
              </div>
            </div>
            <% @count+=1 %>
          <% end %>
          <% @count=0 %>
        </section>
    </section>
  <% end %>

  <section class="confidence row align-self-center">
    <div class="stats col-lg-4">
      <h4><%= t 'home.stats.one.title' %></h4>
      <p><%= t 'home.stats.one.phrase' %></p>

    </div>
    <div class="stats col-lg-4">
      <h4><%= t 'home.stats.two.title' %></h4>
      <p><%= t 'home.stats.two.phrase' %></p>

    </div>
    <div class="stats col-lg-4">
      <h4><%= t 'home.stats.three.title' %></h4>
      <%= link_to downloads_quality_path do %>
        <p id="blacken"><%= t 'home.stats.three.phrase' %></p>
      <% end %>


    </div>
  </section>

  <section class="row image-over-section">
      <div class="home-about-img-div col-lg-8">
        <div id="hm-where-img"></div>
      </div>
      <div class="home-about-txt-div col-lg-4">
        <%= link_to where_path do %>
          <p class="home-text" id="blacken"><%= capify(t "home.where_intro") %><%= image_tag "right.png", class:"right-arrow" %></p>
        <% end %>
        <h3 class="fade-header">Where?</h3>
      </div>
  </section>
</div>
